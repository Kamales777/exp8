<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>School Fee Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>School Fee Payment Records</h2>
        <a href="/add" class="btn btn-primary">Add Payment</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Roll Number</th>
                <th>Fee Amount</th>
                <th>Payment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.class %></td>
                <td><%= student.rollNumber %></td>
                <td>$<%= student.feeAmount %></td>
                <td><%= student.paymentDate.toLocaleDateString() %></td>
                <td>
                    <a href="/edit/<%= student._id %>" class="btn btn-sm btn-warning">Edit</a>
                    <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
