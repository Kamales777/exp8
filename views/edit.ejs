<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Fee Payment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <h2>Edit Fee Payment</h2>
    <form id="editForm" class="bg-white p-4 shadow rounded">
        <div class="mb-3">
            <label class="form-label">Student Name</label>
            <input type="text" id="name" class="form-control" value="Alice Johnson" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Class</label>
            <input type="text" id="class" class="form-control" value="10" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Roll Number</label>
            <input type="number" id="rollNumber" class="form-control" value="101" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Fee Amount</label>
            <input type="number" id="feeAmount" class="form-control" value="500" required>
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <button type="button" id="cancelBtn" class="btn btn-secondary">Cancel</button>
    </form>
</div>

<script>
    const editForm = document.getElementById('editForm');
    const cancelBtn = document.getElementById('cancelBtn');

    // Handle form submission
    editForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const updatedData = {
            name: document.getElementById('name').value,
            class: document.getElementById('class').value,
            rollNumber: document.getElementById('rollNumber').value,
            feeAmount: document.getElementById('feeAmount').value
        };
        console.log('Updated Student Data:', updatedData);
        alert('Student record updated! Check console for data.');
    });

    // Cancel button
    cancelBtn.addEventListener('click', function() {
        alert('Edit canceled');
        editForm.reset();
    });
</script>
</body>
</html>
